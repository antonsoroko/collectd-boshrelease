<% if !p("collectd.graphite_server").empty? %>
LoadPlugin "write_graphite"
<Plugin "write_graphite">
  <Node "graphite">
    EscapeCharacter "_"
    Prefix "<%= p("collectd.graphite_prefix") %><%= name.sub(/_z\d+$/, "") %>."
    Postfix ".<%= index %>."
    Host "<%= p("collectd.graphite_server") %>"
    Port "2003"
    SeparateInstances true
    Protocol "tcp"
  </Node>
</Plugin>
<% end %>
